@using Microsoft.AspNetCore.Components

<div class="page-container @WidthClass">
    @if (!string.IsNullOrWhiteSpace(Title) || Actions is not null)
    {
        <div class="page-header">
            <h1 class="page-title">@Title</h1>
            <div class="page-actions">@Actions</div>
        </div>
    }
    <div class="page-body">
        @ChildContent
    </div>
</div>

@code{
    [Parameter] public string? Title { get; set; }
    [Parameter] public RenderFragment? Actions { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    /// <summary>narrow | normal | wide</summary>
    [Parameter] public string Width { get; set; } = "normal";

    private string WidthClass => Width switch
    {
        "narrow" => "pc--narrow",
        "wide"   => "pc--wide",
        _        => "pc--normal"
    };
}

<style>
    .page-container {
        margin: 0 auto;
    }

    .pc--narrow .page-header,
    .pc--narrow .page-body {
        max-width: 720px;
        margin: 0 auto;
    }

    .pc--normal .page-header,
    .pc--normal .page-body {
        max-width: 1120px;
        margin: 0 auto;
    }

    .pc--wide .page-header,
    .pc--wide .page-body {
        max-width: 1320px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 12px;
        padding: 8px 16px 0 16px;
    }

    .page-title {
        font-size: 24px;
        margin: 0;
        color: var(--text);
    }

    .page-actions {
        display: flex;
        gap: 8px;
    }

    .page-body {
        padding: 16px;
    }

</style>