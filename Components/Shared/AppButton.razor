<button class="btn @Css" disabled="@Disabled" @onclick="OnClick">
    @if (IsLoading) { <span class="spinner"></span> }
    @ChildContent
</button>

@code{
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public string Variant { get; set; } = "primary"; // primary|ghost|danger
    [Parameter] public string Size { get; set; } = "md";         // sm|md|lg
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    string Css => $"btn--{Variant} {(Size=="sm"?"btn--sm":Size=="lg"?"btn--lg":"")}";
}