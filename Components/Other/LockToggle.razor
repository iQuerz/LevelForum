@using LevelForum.Data.Services
@using Microsoft.AspNetCore.Components
@inject IJSRuntime JS
@inject TopicService _topicService

<button type="button"
        class="lock-btn @(Locked ? "is-locked" : null)"
        title="@(Locked ? "Unlock topic" : "Lock topic")"
        disabled="@Disabled"
        @onclick="ConfirmToggle">
    @(Locked ? "ðŸ”’ Locked" : "ðŸ”“ Unlocked")
</button>

@code{
    [Parameter] public bool Locked { get; set; }
    [Parameter] public bool Disabled { get; set; }
    [Parameter] public int TopicId { get; set; }
    [Parameter] public EventCallback<bool> OnToggle { get; set; } // emits new value

    private async Task ConfirmToggle()
    {
        if (Disabled) return;
        var msg = Locked ? "Unlock this topic?" : "Lock this topic?";
        var ok = await JS.InvokeAsync<bool>("confirm", msg);
        if (ok)
        {
            await OnToggle.InvokeAsync(!Locked);
            await _topicService.LockAsync(TopicId, Locked);
        }
    }
}

<style>
    /* lock toggle */
    .lock-btn {
        border: 1px solid var(--border-color);
        background: transparent;
        color: var(--text);
        border-radius: 8px;
        padding: 6px 10px;
        cursor: pointer;
    }
    .lock-btn:hover { background: rgba(255,255,255,.06); }
    .lock-btn.is-locked {
        background: var(--warning);
        color: var(--on-warning);
        border-color: transparent;
    }
</style>